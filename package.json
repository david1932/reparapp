{
  "name": "reparapp-gestion",
  "version": "1.0.0",
  "description": "Aplicación de Gestión de Reparaciones",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --win nsis"
  },
  "keywords": [
    "gestion",
    "reparaciones",
    "electron"
  ],
  "author": "David",
  "license": "ISC",
  "build": {
    "appId": "com.reparapp.gestion",
    "productName": "ReparApp PRO",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.ps1",
      "!**/*.log",
      "!.git/**",
      "!.github/**",
      "!tests/**",
      "!temp_**",
      "!src/**",
      "!dist/**",
      "!keygen_tool.html",
      "!audit_tool.js",
      "!clean_logs.js",
      "!MARKET_RESEARCH.md",
      "!implementation_plan.md"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  }
}